@model uStoreMVC.Models.ContactViewModel
@{
    ViewBag.Title = "Contact";
}

<div id="contact-page" class="container">
    <div class="bg">
        <div class="row">
            <div class="col-sm-12">
                <h2 class="title text-center">Contact <strong>Us</strong></h2>
                <div id="gmap" class="contact-map google-maps">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3102.023561985009!2d-94.61137504846033!3d38.96912997945933!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0e925e366ed0f%3A0x73aec4617abd2f03!2sCentriq+Training!5e0!3m2!1sen!2sus!4v1468708493385" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group col-md-6">
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name", required = "required" })
                    </div>

                    <div class="form-group col-md-6">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email", title = "We will keep your email confidential and won't send unnecessary spam", required = "required" })
                    </div>

                    <div class="form-group col-md-12">
                        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", placeholder = "Subject", required = "required" })
                    </div>

                    <div class="form-group col-md-12">
                        @Html.TextAreaFor(x => x.Message, new { @class = "form-control", id = "Message", rows = "8", placeholder = "Your Message Here", title = "Please be concise but make sure to include all important details.", required = "required" })
                    </div>

                    <div class="form-group col-md-12">
                        <input type="submit" name="submit" class="btn btn-primary pull-right" value="submit" />
                    </div>
                }@* End Form *@


            </div>
            <div>
                <p>
                    @if (Model != null)
            {
                        @Model.Name
                        @Model.Email<br/>
                        @Model.Subject<br/>
                        @Model.Message
                    }

                </p>
            </div>
            <div class="col-sm-4">
                <div class="contact-info">
                    <h2 class="title text-center">Contact Info</h2>
                    <address>
                        <p>Centriq Training cStore</p>
                        <p>8700 Stateline Ave</p>
                        <p>Leawood, KS 66206</p>
                        <p>Phone: 913-322-7000</p>
                        <p>Email: info@centriqcstore.com</p>
                    </address>
                    <div class="social-networks">
                        <h2 class="title text-center">Social Networking</h2>
                        <ul>
                            <li><a href="https://www.facebook.com/CentriqTraining/" target="_blank"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="https://twitter.com/CentriqTraining" target="_blank"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="https://www.linkedin.com/company/centriq-foss-training" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                            <li><a href="https://www.youtube.com/user/CentriqTraining" target="_blank"><i class="fa fa-youtube"></i></a></li>
                            <li><a href="#https://plus.google.com/108553092060324883743" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!--/#contact-page-->

@section scripts {
    <script src="~/Content/Scripts/formValidation.js"></script>
}